Bootstrap: docker
From: ubuntu:22.04 

%labels
    Author JoeChen  

%post
    # 安装构建工具和依赖
    apt-get update && apt-get install -y \
        build-essential \
        cmake \
        git \
        libgtest-dev \
        && rm -rf /var/lib/apt/lists/*

    # 创建编译目录
    mkdir -p /opt/app/build

    # 编译项目
    cd /opt/app/build
    cmake ..
    make

%files
. /opt/app  

%environment
    export PATH=/opt/app/build:$PATH

%runscript
    exec /opt/app/build/convert_grayscale "$@"
